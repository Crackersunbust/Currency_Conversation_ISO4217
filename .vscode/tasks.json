{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with curl",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-o",
                "main.exe",
                "-IC:/msys64/mingw64/include",
                "-LC:/msys64/mingw64/lib",
                "-lcurl"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
              "options": {
                "cwd": "${workspaceFolder}"
              }
        }
    ]
}

